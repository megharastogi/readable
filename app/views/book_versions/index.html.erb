<h1>Listing book_versions</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Grade</th>
      <th>Content</th>
      <th>Ri</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @book_versions.each do |book_version| %>
      <tr>
        <td><%= book_version.book_id %></td>
        <td><%= book_version.grade %></td>
        <td><%= book_version.content %></td>
        <td><%= book_version.ri %></td>
        <td><%= link_to 'Show', book_version %></td>
        <td><%= link_to 'Edit', edit_book_version_path(book_version) %></td>
        <td><%= link_to 'Destroy', book_version, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

