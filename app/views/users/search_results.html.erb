	 		<div class="col-lg-8">
	 		<div style="margin-top:-21px;">
	<div style="overflow:hidden;margin:37px 24px">
		<%=form_tag "/users/search_results" do %>
		<%=text_field_tag "search" ,"",:placeholder=>"Tilte/Tag/Keywords",:class=>"form-control",:style=>"width:250px;margin-right:10px;float:left;" %>
		<%=select_tag "grade", "<option>Select Grade</option><option>6</option><option>5</option><option>4</option>".html_safe,:class=>"form-control",:style=>"width:150px;margin-right:5px;float:left;"%>
		<%=submit_tag "Search",:class=>"btn btn-theme",:style=>"margin-top: 0px;"%>
	<% end %>
	</div>


<div class="book_container"> 
	<% @books.each do |b|%>
		<div class="book_box">
		<% if b.name == "Diary of a Wimpy Kid"%>
			<%=image_tag("diary_of_wimpy_kid.jpg")%>
		<% elsif b.name == "Matilda"%>
			<%=image_tag("matilda.jpg")%>	
		<% elsif b.name == "The Bad Beginning (A Series of Unfortunate Events #1)"%>
			<%=image_tag("thebadbeginning.jpg")%>	
		<% elsif b.name == "Esperanza Rising"%>
			<%=image_tag("esperanza_ rising.jpg")%>	
		<% elsif b.name == "Ender's Game"%>
			<%=image_tag("enders_game.jpg")%>	
		<% elsif b.name == "Harry Potter and the Sorcerer's Stone"%>
			<%=image_tag("harry_potter.jpg")%>	
		<% elsif b.name == "Stargirl"%>
			<%=image_tag("stargirl.jpg")%>	
		<% elsif b.name == "Holes"%>
			<%=image_tag("holes.jpg")%>	
		<% end %><br/>

		<div class="book_name"><%=b.name%></div>
		<%=b.description%><br/>
		<div class="book_grade">Grade: <%=b.grade%></div>
		<div class="add_to_list_block">
			<%= link_to "Add to List", user_add_to_list_path(:book_id => b.id),:class=>"btn btn-add-list add_button"%>
		</div>
		</div>
	<% end %>

	<%if @books.blank?%>
		<p style="margin-left:30px;">Sorry we were not able to find any results.</p>
	<% end %>
</div>
</div>
			
